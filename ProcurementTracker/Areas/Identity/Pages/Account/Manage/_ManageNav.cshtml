@using ProcurementTracker.Models
@inject SignInManager<ApplicationUser> SignInManager
@{
	var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
	string? username = Context.Request.Query["username"];
}
<div class="card">
	<div class="card-body">
		<ul class="nav nav-pills flex-column">
			<li class="nav-item"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index" asp-route-username="@username">Profile</a></li>
			<li class="nav-item"><a class="nav-link @ManageNavPages.UserRoleNavClass(ViewContext)" id="user-role" asp-page="./UserRole" asp-route-username="@username">User Role</a></li>
			<li class="nav-item"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword" asp-route-username="@username">Password</a></li>
		</ul>
	</div>
</div>

