@page
@model ProcurementTracker.Pages.Roles.CreateModel

@{
    ViewData["Title"] = "Add Role";
}

<h3>Add Role</h3>
<hr />

<p>
    <a asp-page="Index" class="btn btn-light btn-outline-secondary"><i class="fas fa-angle-left"></i> Cancel</a>
</p>


<section>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Role.Name" class="control-label"></label>
                    <input asp-for="Role.Name" class="form-control" />
                    <span asp-validation-for="Role.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
